  <!-- owl carousel script 
    -->
  <script type="text/javascript">
  
//Attach the event listener to the overlay to close the popup

function showRequestCallSection() {
    // Show the "Request A Call Back" section as a popup
    document.querySelector('.contactt').style.display = 'block';
    document.querySelector('.overlay').style.display = 'block';
    // Optionally, set a max height if needed
  }

  function hideRequestCallSection() {
    // Hide the "Request A Call Back" section
    document.querySelector('.contactt').style.display = 'none';
    document.querySelector('.overlay').style.display = 'none';
  }

  document.querySelector('.overlay').addEventListener('click', hideRequestCallSection);

  
  function showRequestfeedbackSection() {
    // Show the "Feedback" section as a popup
    document.querySelector('.feedbackk').style.display = 'block';
    document.querySelector('.overlay').style.display = 'block';
  }

  function hideRequestfeedbackSection() {
    // Hide the "Feedback" section
    document.querySelector('.feedbackk').style.display = 'none';
    document.querySelector('.overlay').style.display = 'none';
  }
  
  function showRequestprofileSection() {
	    // Show the feedback popup and overlay
	    document.querySelector('.profile').style.display = 'block';
	    document.querySelector('.overlay').style.display = 'block';
	  }
function hideRequestprofileSection() {
	    // Hide the "Feedback" section
	    document.querySelector('.profile').style.display = 'none';
	    document.querySelector('.overlay').style.display = 'none';
	  }

  function hideSection() {
    // Hide the currently visible section
    if (document.querySelector('.contactt').style.display === 'block') {
      hideRequestCallSection();
    } else if (document.querySelector('.feedbackk').style.display === 'block') {
      hideRequestfeedbackSection();
    }
    else if (document.querySelector('.profile').style.display === 'block') {
    	hideRequestprofileSection();
    }
  }



    $(".owl-carousel").owlCarousel({
      loop: true,
      margin: 0,
      navText: [],
      center: true,
      autoplay: true,
      autoplayHoverPause: true,
      responsive: {
        0: {
          items: 1
        },
        1000: {
          items: 3
        }
      }
    });
  </script>
  <!-- end owl carousel script -->

